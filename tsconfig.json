{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES6",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "baseUrl": ".",
        "outDir": "dist",
        "esModuleInterop": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "typeRoots": ["@types"]
    },
    "hooks": [ "copy-files" ],
    "include": [
        "src/**/*"
    ],
}