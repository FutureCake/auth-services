{
    "env": {
        "doc": "The application environment.",
        "format": ["production", "development", "test"],
        "default": "development",
        "env": "NODE_ENV"
    },
    "authentication": {
        "jwtToken": {
            "private": {
                "doc": "jwt private token keep in .env file",
                "format": "*",
                "default": "KEEP TOKEN PRIVATE IN .ENV FILE",
                "env": "JWT_PRIVATE_KEY",
                "arg": "jwt_private_key",
                "sensitive": true
            },
            "public": {
                "doc": "jwt public token best to keep in .env file",
                "format": "*",
                "default": "BEST TO KEEP TOKEN PRIVATE IN .ENV FILE",
                "env": "JWT_PUBLIC_KEY",
                "arg": "jwt_public_key",
                "sensitive": true
            }
        }
    },
    "server": {
        "port": {
            "doc": "server host name / ip",
            "format": "Number",
            "default": 3000,
            "env": "PORT",
            "arg": "port"
        },
        "host": {
            "doc": "server host name / ip",
            "format": "*",
            "default": "127.0.0.1",
            "env": "HOST",
            "arg": "host"
        },
        "options": {
            "key": {
                "doc": "certificate key",
                "format": "*",
                "default": "some/file/path",
                "env": "SSL_KEY",
                "arg": "ssl_key"
            },
            "cert": {
                "doc": "ssl certificate",
                "format": "*",
                "default": "some/file/path",
                "env": "SSL_CERT",
                "arg": "ssl_cert"
            }
        }
    },
    "email": {
        "host": {
            "doc": "email host address",
                "format": "*",
                "default": "smtp.localhost.com",
                "env": "EMAIL_HOST",
                "arg": "email_host"
        },
        "port": {
            "doc": "email host port",
                "format": "Number",
                "default": 587,
                "env": "EMAIL_PORT",
                "arg": "email_port"
        },
        "user": {
            "doc": "email server user id",
                "format": "*",
                "default": "",
                "env": "EMAIL_USER",
                "arg": "email_user"
        },
        "pass": {
            "doc": "email user password",
                "format": "*",
                "default": "",
                "env": "EMAIL_PASS",
                "arg": "email_pass"
        }
    },
    "mysql": {
        "host": {
            "doc": "Database host name / ip",
            "format": "*",
            "default": "localhost",
            "env": "MYSQL_HOST",
            "arg": "mysql_host"
        },
        "port": {
            "doc": "Database port",
            "format": "*",
            "default": 3036,
            "env": "MYSQL_PORT",
            "arg": "mysql_port"
        },
        "user": {
            "doc": "Database user",
            "format": "String",
            "default": "root",
            "env": "MYSQL_USER",
            "arg": "mysql_user"
        },
        "password": {
            "doc": "Database pass",
            "format": "String",
            "default": "root",
            "env": "MYSQL_PASS",
            "arg": "mysql_pass"
        },
        "database": {
            "doc": "Database name",
            "format": "String",
            "default": "users",
            "env": "MYSQL_DB",
            "arg": "mysql_db"
        },
        "socketPath": {
            "default": "/tmp/mysql.sock"
        }
    }
}