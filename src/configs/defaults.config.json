{
    "env": {
        "doc": "The application environment.",
        "format": [
            "production",
            "development",
            "test"
        ],
        "default": "development",
        "env": "NODE_ENV"
    },
    "ip": {
        "doc": "The IP address to bind.",
        "format": "ipaddress",
        "default": "127.0.0.1",
        "env": "IP_ADDRESS"
    },
    "port": {
        "doc": "The port to bind.",
        "format": "port",
        "default": 3000,
        "env": "PORT",
        "arg": "port"
    },
    "mysql": {
        "host": {
            "doc": "Database host name/IP",
            "format": "*",
            "default": "server1.dev.test",
            "env": "MYSQL_HOST",
            "arg": "mysqlHost"
        },
        "name": {
            "doc": "Database name",
            "format": "String",
            "default": "users"
        }
    }
}